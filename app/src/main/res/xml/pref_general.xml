<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <ListPreference
        android:title="@string/pref_category_label"
        android:key="@string/pref_category_key"
        android:defaultValue="@string/pref_category_nowplaying"
        android:entryValues="@array/pref_category_values"
        android:entries="@array/pref_category_options" />



    <ListPreference
            android:title="@string/pref_sort_label"
            android:key="@string/pref_sort_key"
            android:defaultValue="@string/pref_sort_desc"
            android:entryValues="@array/pref_sort_order_values"
            android:entries="@array/pref_sort_order_options" />

</PreferenceScreen>